components:
  schemas:
    CatalogItems:
      type: array
      items:
        $ref: '#/components/schemas/CatalogItem'
    CatalogItem:
      type: object
      xml:
        name: catalogItem
      required:
        - id
        - title
      properties:
        id:
          type: number
          example: 123
        title:
          type: string
          example: 'video card'
        image:
          $ref: '#/components/schemas/Image'
        subcategories:
          type: array
          xml:
            name: subcategories
          items:
            type: object
            xml:
              name: subcategory
            properties:
              id:
                type: number
                example: 123
              title:
                type: string
                example: 'video card'
              image:
                $ref: '#/components/schemas/Image'
    Products:
      type: array
      items:
        $ref: '#/components/schemas/ProductShort'
    Sales:
      type: array
      items:
        $ref: '#/components/schemas/SaleItem'
    ProductShort:
      required:
        - id
        - category
        - title
        - price
        - count
      type: object
      xml:
        name: productShort
      properties:
        id:
          type: number
          example: 123
        category:
          type: number
          example: 55
        price:
          type: number
          example: 500.67
        count:
          type: integer
          example: 12
        date:
          type: string
          example: 'Thu Feb 09 2023 21:39:52 GMT+0100 (Central European Standard Time)'
        title:
          type: string
          example: 'video card'
        description:
          type: string
          example: 'description of the product'
        freeDelivery:
          type: boolean
          example: true
        images:
          type: array
          xml:
            wrapped: true
          items:
            $ref: '#/components/schemas/Image'
        tags:
          type: array
          xml:
            wrapped: true
          items:
            $ref: '#/components/schemas/Tag'
        reviews:
          type: integer
          example: 5
        rating:
          type: number
          example: 4.6
    SaleItem:
      required:
        - id
        - title
        - price
        - salePrice
      type: object
      xml:
        name: saleItem
      properties:
        id:
          type: string
          example: '123'
        price:
          type: number
          example: 500.67
        salePrice:
          type: number
          example: 200.67
        dateFrom:
          type: string
          example: '2023-05-08'
        dateTo:
          type: string
          example: '2023-05-20'
        title:
          type: string
          example: 'video card'
        images:
          type: array
          xml:
            wrapped: true
          items:
            type: string
            xml:
              name: imageUrl
    ProductFull:
      required:
        - id
        - category
        - title
        - price
        - count
      type: object
      xml:
        name: productFull
      properties:
        id:
          type: number
          example: 123
